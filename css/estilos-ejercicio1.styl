gris_oscuro = #444
gris_texto = #7A7A7A
azul = #22BCE0
naranja = #DD4F24

@font-face {
  font-family: 'iconos';
  src: url('/../fonts/icomoon.eot?3zt1ol');
  src: url('/../fonts/icomoon.eot?3zt1ol#iefix') format('embedded-opentype'),
    url('/../fonts/icomoon.ttf?3zt1ol') format('truetype'),
    url('/../fonts/icomoon.woff?3zt1ol') format('woff'),
    url('/../fonts/icomoon.svg?3zt1ol#icomoon') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: block;
}

a
    color naranja

body
    background #E8E8E8
    color gris_oscuro
    font-family Arial
    font-size 16px

footer
    background naranja
    color rgba(white,0.5)
    padding 0.2em 0
    text-align center
    width 100%
    h3
        font-size 14px
        font-weight normal
        strong
            display block
        .mejor
            &:before
            &:after
                content " - "

form
    padding 0.8em
    display none

    label
        width 60px

header
    background gris_oscuro
    box-shadow 0 5px 0 rgba(0,0,0,0.2)
    color white
    padding 1em
    position relative
    overflow hidden
    z-index 1

    .logo
        border-right 1px solid azul
        width 60px
        img
            width 52px

    .titular
        margin 0 80px 0 70px
        .filtro
            color azul
            font-size 14px
            font-weight bold
            font-style italic
            text-decoration none
        .publicar
            background naranja
            color white
            float right
            font-style italic
            margin -5px -10px 0 0
            padding 0.3em 0.6em
            text-decoration none
            text-shadow 1px 1px 0px black
            &:before
                content: "\e908"
                display inline-block
                font-family "iconos"
                margin 0 0.5em 0 0
        .titulo
            font-size 18px
            font-weight normal
            margin 0
            padding 0

    .usuario
        position absolute
        right 0
        top 0
        .avatar
            margin 1.2em 1.7em 0 0
            position relative
            z-index 2
            img
                border-radius 50%
                width 50px
        .flechita
            color white
            background naranja
            display block
            padding 3px
            position absolute
            text-align right
            text-decoration none
            top 30px
            right 8px
            width 50%
            &:after
                display inline-block
                content "\e900"
                font-family "iconos"
                text-shadow 1px 1px 0 black

nav
    background azul
    border-left 15px solid white
    position relative
    &:before
        border-bottom 20px solid transparent
        border-left 10px solid white
        border-top 20px solid transparent
        content ""
        left 0
        position absolute
    .menu
        height 40px
        line-height 40px
        margin 0
        overflow-x auto
        white-space nowrap
        padding 0
        li
            display inline-block
            a
                color white
                display inline-block
                margin 0 0.5em
                padding 0 0.3em
                text-decoration none
                &:after
                    content " -"

.left
    float left

.right
    float right

.posts
    padding 0.5em
    .post
        background white
        border-radius 0 0 0.5em 0.5em
        box-shadow 2px 2px 10px rgba(black, 0.5)
        color gris_texto
        margin-bottom 1em
    .acciones
        border-top 3px solid azul
        padding 0.5em
        overflow hidden
        .datos
            float right
            .comentarios
                background gris_oscuro
                border-radius 3px
                color white
                margin 0 0.5em 0 0
                padding 2px 5px
                text-decoration none
            .estrellita
                    text-decoration none
                &:after
                    color #DD0
                    content "\e9d9"
                    font-family "iconos"

        .votos
            float left
            .down
            .up
                text-decoration none
            .down
                color red
                &:before
                    content "\e900"
                    font-family "iconos"
                    font-size 1.2em
                    vertical-align bottom
            .up
                color green
                &:before
                    content "\e901"
                    font-family "iconos"
                    font-size 1.2em
                    vertical-align bottom
    .descripcion
        color gris_texto
        .detalles
            height 160px
            margin-left 130px
            .autor
                margin 0.5em 0 2em 0
                text-decoration none
            .fecha
                float right
                margin 2em 1em 0 0
            .tag
                background azul
                border-radius 0.5em
                color white
                padding 0.2em 0.5em
                text-decoration none
            .titulo
                color gris_oscuro
                font-size 18px
                font-style italic
                margin 0
                padding 0.5em 0.5em 0 0
        .imagen
            float left
            margin 0
            img
                height 160PX
                vertical-align top
                width 120PX

@media screen and (min-width: 768px)
    header
        .titular
            .publicar
                padding-left 3em
                position relative
                &:before
                    left 0px
                    font-size 2.5em
                    position absolute
                    top -10px
    .posts
        .post
            display inline-block
            vertical-align top
            width 48%
            &:nth-child(odd)
                margin-right 2%